{
  "name": "bizzsign-frontend-v1",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },

  "runArgs": ["--name=bizzsign-frontend-v1"],

  // Montar volume para persistir chaves SSH entre rebuilds do container
  "mounts": [
    "source=bizzsign-ssh-volume,target=/home/node/.ssh,type=volume"
  ],

  // Features do DevContainer para Git e SSH
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "anthropic.claude-code",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "git.enabled": true,
        "git.path": "/usr/bin/git"
      }
    }
  },

  // Executar setup de Git/SSH apÃ³s criar o container
  "postCreateCommand": "sudo chown -R node:node /home/node/.ssh && sudo chmod 700 /home/node/.ssh && bash .devcontainer/setup-git.sh && npm install",

  // Iniciar o servidor Next.js automaticamente em background quando o container reiniciar
  "postStartCommand": "npm run dev > /tmp/nextjs.log 2>&1 &",

  "forwardPorts": [3000],

  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "node",

  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind"
}
